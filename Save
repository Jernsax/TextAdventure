package Textadventure;

import java.io.File;
import java.io.FileNotFoundException;
import java.io.FileOutputStream;
import java.io.IOException;
import java.io.ObjectOutputStream;

/**
 *
 * @author Rolst
 */
public class Save {
    
    public Save(Player p, Location l){

        String Playername = p.getHeroName();
        String LocationTitel = l.getDescription();
        /*ArrayList<String> RoomItems = new ArrayList<>();
        ArrayList<String> RoomExits = new ArrayList<>();
        RoomItems = r.getRoomItems();
        RoomExits = r.getRoomExits();*/

        File f = new File(Playername + ".txt");

        if(f.exists()){

            try{
                FileOutputStream fopt = new FileOutputStream(f);
                ObjectOutputStream oos = new ObjectOutputStream(fopt);

                oos.writeObject(Playername);
                oos.writeObject(LocationTitel);
                oos.flush();

            }catch(FileNotFoundException not){

                System.out.println("File not found: " + not.getLocalizedMessage());

            }catch(IOException e){

                System.out.println("IOException: " + e.getLocalizedMessage());
            }
        }
    }
    
}
