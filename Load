package Textadventure;

import java.io.File;
import java.io.FileInputStream;
import java.io.IOException;
import java.io.ObjectInputStream;
import java.util.Scanner;

/**
 *
 * @author Rolst
 */
public class Load {
    
    public void Load(Player p, Location l){

        Scanner i = new Scanner(System.in);
        System.out.print("Enter Player Name?: ");
        String Player = i.next();
        String PlayerName;
        String LocationTitel;
   
        /*ArrayList<String> RoomItems = new ArrayList<>();
        ArrayList<String> RoomExits = new ArrayList<>();*/
        File f = new File(Player + ".txt");
        if(f.exists()){

            System.out.println("Loading game . . .");

            try{    

                try (ObjectInputStream is = new ObjectInputStream(new FileInputStream(f))) {
                    PlayerName = (String) is.readObject();
                    LocationTitel = (String) is.readObject();
                    /*RoomItems = (ArrayList<String>)ois.readObject();
                    RoomExits = (ArrayList<String>)ois.readObject();*/
                }

                p.getHeroName();
                l.getDescription();
                l.getTitle();
            }catch(IOException | ClassNotFoundException e){
            }
        }
    }
}
