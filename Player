package textadventure;

/**
 *
 * @author Jernsax
 */
public class Player {

    private String heroName;
    private int heroLocation;

    public Player(){
        
    }
    
    public Player(String heroName, int herLocation) {

        this.heroName = heroName;
        this.heroLocation = heroLocation;

    }

    public void setHeroName(String newHeroName) {
        heroName = newHeroName;
    }

    public String getHeroName() {
        return heroName;
    }

    public void setHeroLocation(int newHeroLocation) {
        heroLocation = newHeroLocation;
    }

    public int getHeroLocation() {
        return heroLocation;
    }
}
